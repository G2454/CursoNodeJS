<h1>Todas as Tasks</h1>

<ul class="task-list">
    {{#each tasks}}
    <li>
        <a href="/" class="title">{{this.title}}</a>
        <div class="actions">
            <a href="/">Concluido</i></a>
            <a href="/">Editar</a>
            <form action="/tasks/remove" method="POST">
            <input type="hidden" name="id" value={{this.id}}>
            <button type="submit">
                <a>Deletar</a>
            </button>
            </form>
            <a href="/"></a>
        </div>
    </li>
    {{/each}}
</ul>